{
  "lint": {
    "rules": {
      "include": [
        "verbatim-module-syntax"
      ],
      "exclude": [
        "prefer-const",
        "jsx-button-has-type",
        "no-explicit-any",
        "ban-types",
        "no-window",
        "no-window-prefix",
        "no-sloppy-imports"
      ]
    }
  },
  "fmt": {
    "lineWidth": 120,
    "exclude": [
      "**/i18n/translations/**"
    ]
  }
}
